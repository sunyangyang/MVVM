<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="areaCode"
            type="android.databinding.ObservableArrayList"/>

        <variable
            name="callback"
            type="com.example.myapplication.login.callback.LoginNumberCallback"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">
        <TextView
            android:id="@+id/txt_cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/login_cancel"
            android:gravity="center"
            android:textSize="17dp"
            android:onClick="@{()->callback.dismissPop()}"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"/>
        <View
            android:id="@+id/cancel_divider"
            app:layout_constraintBottom_toTopOf="@+id/txt_cancel"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#fff0f0f0"/>

        <TextView
            android:text="@{String.valueOf(areaCode[1])}"
            android:id="@+id/txt_usa"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:gravity="center"
            android:onClick="@{()->callback.changeArea(String.valueOf(1))}"
            app:layout_constraintBottom_toTopOf="@+id/cancel_divider"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"/>
        <View
            android:id="@+id/item_divider"
            app:layout_constraintBottom_toTopOf="@+id/txt_usa"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff0f0f0"/>
        <TextView
            android:id="@+id/txt_ch"
            android:text="@{String.valueOf(areaCode[0])}"
            android:textColor="@android:color/black"
            android:onClick="@{()->callback.changeArea(String.valueOf(86))}"
            android:textSize="17dp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/item_divider"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"/>
    </android.support.constraint.ConstraintLayout>
</layout>