<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="login_code">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">17dp</item>
        <item name="android:background">@drawable/bg_login_code_edit</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textCursorDrawable">@drawable/color_white_text_cursor</item>
    </style>

    <style name="login_tips">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#ff6176e7</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="pop_anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_from_bottom_to_top_enter</item>
        <item name="android:windowExitAnimation">@anim/slide_from_bottom_to_top_exit</item>
    </style>

</resources>
